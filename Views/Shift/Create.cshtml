@model TimeGhazi.Models.Shift

<h2>Opprett nytt skift</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="selectedUserId">Velg ansatt</label>
        <select name="selectedUserId" class="form-control" required>
            @foreach (var employee in ViewBag.Employees)
            {
                <option value="@employee.UserId">@employee.Name - @employee.Email</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="StartTime">Starttid</label>
        <input asp-for="StartTime" type="datetime-local" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="EndTime">Sluttid</label>
        <input asp-for="EndTime" type="datetime-local" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Opprett skift</button>
</form>
