@model TimeGhazi.Models.Employee

@{
    ViewData["Title"] = "Opprett ansatt";
}

<h2>Opprett ansatt</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-controller="Admin" asp-action="CreateEmployee" method="post">
    <div class="form-group">
        <label asp-for="Name">Navn</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">E-post</label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Telefonnummer</label>
        <input asp-for="PhoneNumber" class="form-control" required />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Role">Rolle</label>
        <select asp-for="Role" class="form-control">
            <option value="Employee">Employee</option>
            <option value="Manager">Manager</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age">Alder</label>
        <input asp-for="Age" type="number" class="form-control" min="18" max="100" required />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address">Adresse</label>
        <input asp-for="Address" class="form-control" required />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Opprett</button>
</form>
